<h1>Destination Page: <%= @destination.name %></h1>

<% if @destination.posts.length > 0 %>
    <h2>Most Recent Posts:</h2>
    <ul>
        <% @destination.recent_posts.each do |post| %>
            <li><%= post.title %></li>
        <% end %>
    </ul>
<% end %>

<% if @destination.posts.length > 0 %>
    <h2>Featured Post: <%= link_to @destination.featured_post.title, post_path(@destination.featured_post.id) %></h2>
<% end %>

<% if @destination.bloggers.length > 0 %>
    <h2>Average Age: <%= @destination.average_age %></h2>
<% end %>